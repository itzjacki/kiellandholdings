---
interface Props {
  jobTitle: string;
  name: string;
  imagePath: string;
  isVacant?: boolean;
}

const { jobTitle, name, imagePath, isVacant } = Astro.props;
---

<div
  class="group flex flex-col items-center md:mx-8 md:flex-row md:even:flex-row-reverse"
>
  <img
    class="z-10 max-h-96 grayscale"
    src={imagePath}
    alt={isVacant ? "Empty portrait" : `Portrait of our ${jobTitle}`}
  />
  <div
    class="-mt-8 bg-sky-950 px-4 pb-8 pt-12 md:mt-0 md:px-12 md:py-8 md:group-odd:mr-8 md:group-even:ml-8"
  >
    <h2 class="text-2xl font-medium">{jobTitle}</h2>
    <h3 class="mb-4 text-teal-300">{name}</h3>
    <p>
      <slot />
    </p>
  </div>
</div>
